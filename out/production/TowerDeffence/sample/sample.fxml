<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT">
    <Button fx:id="mainButton" text="Add tower" onAction="#click"/>
    <Button fx:id="nextButton" text="Next Frame" onAction="#next"/>
    <Button fx:id="enemy" text="Add enemy" onAction="#addEnemy"/>
    <Canvas width="800" height="300" fx:id="canvas" onMouseClicked="#addNewTower" onMouseMoved="#newCoord"/>
</VBox>